{
  "manifest_version": 3,
  "name": "UnAIfy",
  "version": "0.1.0",
  "description": "Prototype popup UI for UnAIfy - choose which anti-AI filters you want!",
  "permissions": ["storage"],
  "icons": {
    "16": "icons/strikeAI16.png",
    "48": "icons/strikeAI48.png",
    "128": "icons/strikeAI128.png"
  },
  "action":{
    "default_popup": "popup.html",
    "default_title": "UnAIfy"
  },
  "js_background": {
    "service_background_worker": "background-hide-google-ai-overview-task.js"
  },
  "content_scripts":[
    {
      "matches": [
        "https://www.google.com/*",
        "https://www.google.co.uk/*"
        ],
      "js": ["content-google.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*/*", "https://*/*"],
      "exclude_matches": [
        "https://www.google.com/*",
        "https://www.google.co.uk/*"
        ],
      "js": ["content-generic.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.google.com/search*"],
      "js": ["content-hide-google-ai-overview.js"]
    }
  ]
}

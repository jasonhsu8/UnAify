{
  "manifest_version": 3,
  "name": "UnAIfy",
  "version": "0.1.0",
  "description": "Prototype popup UI for UnAIfy - choose which anti-AI filters you want!",
  "action":{
    "default_popup": "popup.html",
    "default_title": "UnAIfy"
  },
  "icons": {
    "16": "icons/UnAIfy16.png",
    "48": "icons/UnAIfy48.png",
    "128": "icons/UnAIfy128.png"
  },
  "permissions": ["storage"],
  "content_scripts":[
    {
      "matches": [
        "https://*/*",
        "https://*/*"
        ],
      "include_globs": ["*://www.google.*/search*"],
      "js": ["content-blacklist.js", "content-hide-google-ai-overview.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*/*", "https://*/*"],
      "exclude_globs": [
        "*://www.google.*/search*"
        ],
      "js": ["content-warning.js"],
      "run_at": "document_idle"
    }
  ]
}
